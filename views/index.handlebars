<div class = "container">
  <div class = "row">
    
  <br><br>
  <form action = "/" method ="POST">
      <textarea type="text" id="inbox" name ="lego" placeholder="New Project..." ></textarea>
      <button type="submit" id = "new" >submit</button>
    </form>

  </div>

  <div  class = "row">
    <div id = "col1" class = "col-6">
      <!-- List all non-built lego objects entered -->
 
      <h4>Projects to be built:</h4>

      <ul>
      {{#each legos}}
       {{#unless this.built}}
       <li>
          <form action = "/update/{{this.id}}/{{this.built}}" method ="POST">
          <text id="txtbx-lf" value={{this.id}}>{{this.lego}}</text>
          <button type="submit" id="build" value={{this.id}}>Build</button>,
          </form>
        </li>
        {{/unless}}
      {{/each}}
      </ul>
      
    </div>  <!-- end of first column (left side) -->
<br><br><br><br>
    <div id ="col2" class = "col-6">

      <h4>Completed projects: </h4>
      
      <ul>
      {{#each legos}}
       {{#if this.built}}
        <li>
          <p> <a class="delete" href="/delete/{{this.id}}" style = "color:yellow">Donate this Toy</a></p> 
          <form action = "/update/{{this.id}}/{{this.built}}" method ="POST">
          <text id="txtbx-rt" value={{this.id}}>{{this.lego}}</text>       
          <button type="submit" id="break" value={{this.id}}>Disassemble</button>,
          </form>
        </li>
        {{/if}}
      {{/each}}
      </ul>
    </div>
   
  </div>  <!--end of 'row' div that defines the body -->

</div>    <!--end of container div -->

